<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             https://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <!-- Herencia desde Spring Boot -->
  <parent>
    <groupId>org.springframework.boot</groupId>
    <artifactId>spring-boot-starter-parent</artifactId>
    <version>3.3.4</version>
    <relativePath/>
  </parent>

  <groupId>com.grupo</groupId>
  <artifactId>factorial-app</artifactId>
  <version>1.0.0</version>
  <packaging>jar</packaging>
  <name>factorial-app</name>

  <properties>
    <java.version>17</java.version>
    <cucumber.version>7.30.0</cucumber.version>
    <junit.version>5.10.2</junit.version>
  </properties>

  <!-- =============================================================== -->
  <!--                         DEPENDENCIAS                           -->
  <!-- =============================================================== -->
  <dependencies>

    <!-- JUnit Platform Suite (para @Suite y @SelectClasspathResource) -->
    <dependency>
      <groupId>org.junit.platform</groupId>
      <artifactId>junit-platform-suite</artifactId>
      <version>1.10.2</version>
      <scope>test</scope>
    </dependency>

    <!-- Cucumber + JUnit 5 -->
    <dependency>
      <groupId>io.cucumber</groupId>
      <artifactId>cucumber-java</artifactId>
      <version>${cucumber.version}</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>io.cucumber</groupId>
      <artifactId>cucumber-junit-platform-engine</artifactId>
      <version>${cucumber.version}</version>
      <scope>test</scope>
    </dependency>

    <!-- JUnit Jupiter API -->
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-api</artifactId>
      <version>${junit.version}</version>
      <scope>test</scope>
    </dependency>

    <!-- Starter básico de Spring Boot -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter</artifactId>
    </dependency>

    <!-- Spark Java -->
    <dependency>
      <groupId>com.sparkjava</groupId>
      <artifactId>spark-core</artifactId>
      <version>2.9.4</version>
    </dependency>

    <!-- Starter para APIs REST -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-web</artifactId>
    </dependency>

    <!-- Starter de pruebas Spring Boot -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-test</artifactId>
      <scope>test</scope>
    </dependency>

  </dependencies>

  <!-- =============================================================== -->
  <!--                             BUILD                              -->
  <!-- =============================================================== -->
  <build>
    <!-- Tu código fuente está en src/, no en src/main/java -->
    <sourceDirectory>${project.basedir}/src</sourceDirectory>

    <plugins>

      <!-- =========================================================== -->
      <!--      Spring Boot Maven Plugin (para empaquetar y correr)    -->
      <!-- =========================================================== -->
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
      </plugin>

      <!-- =========================================================== -->
      <!--      JaCoCo - cobertura de pruebas                          -->
      <!-- =========================================================== -->
      <plugin>
        <groupId>org.jacoco</groupId>
        <artifactId>jacoco-maven-plugin</artifactId>
        <version>0.8.11</version>
        <executions>
          <execution>
            <id>prepare-agent</id>
            <goals>
              <goal>prepare-agent</goal>
            </goals>
          </execution>
          <execution>
            <id>report</id>
            <phase>verify</phase>
            <goals>
              <goal>report</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.basedir}/target/site/jacoco</outputDirectory>
              <reports>
                <xml enabled="true"/>
                <html enabled="true"/>
              </reports>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- =========================================================== -->
      <!--      Build Helper - para incluir carpetas personalizadas    -->
      <!-- =========================================================== -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>3.4.0</version>
        <executions>

          <!-- Fuente principal -->
          <execution>
            <id>add-source</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>${project.basedir}/src</source>
              </sources>
            </configuration>
          </execution>

          <!-- Código de prueba -->
          <execution>
            <id>add-test-source</id>
            <phase>generate-test-sources</phase>
            <goals>
              <goal>add-test-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>${project.basedir}/Test</source>
              </sources>
            </configuration>
          </execution>

          <!-- Archivos .feature -->
          <execution>
            <id>add-test-resource</id>
            <phase>generate-test-resources</phase>
            <goals>
              <goal>add-test-resource</goal>
            </goals>
            <configuration>
              <resources>
                <resource>
                  <directory>${project.basedir}/src/test_backup/resources/features</directory>
                  <targetPath>features</targetPath>
                  <includes>
                    <include>**/*.feature</include>
                  </includes>
                </resource>
              </resources>
            </configuration>
          </execution>

          <!-- Copia forzada de los features al classpath -->
          <execution>
            <id>copy-feature-files</id>
            <phase>process-test-resources</phase>
            <goals>
              <goal>add-test-resource</goal>
            </goals>
            <configuration>
              <resources>
                <resource>
                  <directory>${project.basedir}/src/test_backup/resources/features</directory>
                  <targetPath>${project.build.testOutputDirectory}/features</targetPath>
                  <includes>
                    <include>**/*.feature</include>
                  </includes>
                </resource>
              </resources>
            </configuration>
          </execution>

        </executions>
      </plugin>

      <!-- =========================================================== -->
      <!--      Surefire Plugin - ejecución de pruebas                 -->
      <!-- =========================================================== -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>3.2.5</version>
        <configuration>
          <includes>
            <include>**/*Test.java</include>
          </includes>
          <properties>
            <configurationParameters>
              junit.platform.listeners.default=true
            </configurationParameters>
          </properties>
          <systemPropertyVariables>
            <cucumber.execution.verbose>true</cucumber.execution.verbose>
            <cucumber.publish.quiet>false</cucumber.publish.quiet>
          </systemPropertyVariables>
        </configuration>
      </plugin>

      <!-- =========================================================== -->
      <!--      SonarCloud - análisis estático                         -->
      <!-- =========================================================== -->
      <plugin>
        <groupId>org.sonarsource.scanner.maven</groupId>
        <artifactId>sonar-maven-plugin</artifactId>
        <version>3.11.0.3922</version>
      </plugin>

    </plugins>
  </build>

</project>
